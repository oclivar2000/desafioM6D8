<h1><%= @photo.title %></h1>
<p><%= @photo.description %></p>
<img src="<%= @photo.image.url %>" alt="<%= @photo.title %>" class="photo1">

<h2>Comentarios:</h2>
<%= render @comments %>

<%= form_with(model: [@photo, Comment.new], local: true) do |form| %>
  <div class="form-group">
    <%= form.label :content, "Agregar un comentario" %>
    <%= form.text_area :content %>
  </div>
  <%= form.submit "Comentar" %>
<% end %>
